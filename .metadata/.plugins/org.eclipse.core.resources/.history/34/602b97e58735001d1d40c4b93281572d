package Pagina1;

import java.util.Scanner;

public class ParOImpar2 {

	public static void main(String[] args) {
		

		int numero;
		
        Scanner SC = new Scanner( System.in );

        System.out.println( "Introduzca un numero entero: " );
        numero = SC.nextInt();

        
        if(numero != 0) {
        	
        	do {
        		if(numero==0) {
        	    	   System.out.println("El n√∫mero no es par ni impar");
        	       }
        	       else if ( numero % 2 == 0 )
        	       {
        	           System.out.printf( "ES PAR" );
        	       }
        	       else
        	       {
        	           System.out.printf( "ES IMPAR" );
        	       }
        	}while (numero!=0);
        	}
        else {System.out.println("Ingrese otro valor diferente a 0");}
        
        
       
      
      
      
      
      
       System.out.println("Fin del programa. Te amo Eli <3");
        
        SC.close();
        
    }
}